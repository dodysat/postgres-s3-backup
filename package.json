{
  "name": "postgres-s3-backup",
  "version": "1.0.0",
  "description": "Automated PostgreSQL backup service with S3 storage",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.md\" \"*.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.md\" \"*.json\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test:ci",
    "docker:build": "docker build -t postgres-s3-backup .",
    "docker:build:dev": "docker build -t postgres-s3-backup:dev --target development .",
    "docker:run": "docker run --env-file .env postgres-s3-backup",
    "docker:run:dev": "docker run -it --env-file .env -v $(pwd):/app postgres-s3-backup:dev",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:up:build": "docker-compose up -d --build",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f postgres-backup",
    "docker:compose:restart": "docker-compose restart postgres-backup",
    "docker:tag": "docker tag postgres-s3-backup postgres-s3-backup:$(npm run version --silent)",
    "docker:push": "docker push postgres-s3-backup:$(npm run version --silent)",
    "version": "echo $npm_package_version",
    "prestart": "npm run build",
    "prebuild": "npm run type-check",
    "pretest": "npm run type-check",
    "prepublishOnly": "npm run validate"
  },
  "keywords": [
    "postgresql",
    "backup",
    "s3",
    "docker",
    "cron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
